#!/bin/sh
# Script to launch dmenu with colors matching IR_Black theme

PATH=/home/afronski/.user-scripts:$PATH

TERMINAL="urxvt --hold -e "
RUN=`yeganesh -x -- -nb '#000000' -nf '#FFFFFF' -sb '#7C7C7C' -sf '#CEFFAC' -p 'Run:'`

case $RUN in
  e\;)  exec sudo su afronski -c "e";;
  *\;)  exec `echo $TERMINAL $RUN | sed -e 's/;$//'`;;
  *)    exec $RUN;;
esac
